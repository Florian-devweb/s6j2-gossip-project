

<% flash.each do |key, value| %>
<div id="close" class="<%= flash_class(key) %>" role="alert">
  <%= value %>
</div>

<% end %>

<br/><br/><br/><br/>


        
        <h2>Edit gossip</h2>
        <%= form_for @gossip do |gossip| %>
          <div class="form-group">

            <%= gossip.label :title %><br>
            <%= gossip.text_field :title, class:"form-control" %>
          </div>


          <div class="form-group">
            <%= gossip.label :content %>
            <%= gossip.text_area :content, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= gossip.submit %>
          </div>
        <% end %>
<% if @gossip.errors.any? %>
  <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @gossip.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>